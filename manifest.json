{
  "manifest_version": 2,
  "name": "YouTube Focus",
  "version": "1.0",
  "authors": "Andrei Costa & Jo√£o Paulo Buchholz",

  "applications": {
    "gecko": {
      "id": "joao.buchholz@gmail.com"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content_scripts/content_focus.js"]
    }
  ],

  "browser_action": {
    "default_icon": "button/Focus.png",
    "default_title": "YouTube Focus",
    "default_popup": "popup/youtube_focus.html"
  },
  
  "web_accessible_resources": [
    "focus_mode.jpg",
    "brain_mode.jpg"
  ]
}
