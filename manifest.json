"manifest_version": 2,
  "name": "YouTube_Focus",
  "version": "1.0",

  "applications": {
    "gecko": {
      "id": "joao.buchholz@gmail.com"
    }
  },

  "permissions": [
    "https://youtube.com",
    "https://youtube.com/*"
  ],  

  "browser_action": {
    "default_icon": "button/Focus.png",
    "default_title": "YouTube_Focus",
    "default_popup": "popup/youtube_focus.html"
  },
  
  "web_accessible_resources": [
    "focus_mode.jpg",
    "brain_mode.jpg",
  ]

}
